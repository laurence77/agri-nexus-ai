        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+agrinexus",
      "url": "handle?protocol=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls", ".xlsx"]
